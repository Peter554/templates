[project]
name = "{{ project_name }}"
version = "0.1.0"
description = "{{ description }}"
readme = "README.md"
requires-python = ">={{python_version}}"
dependencies = []

{% if create_cli %}
[project.scripts]
{{ project_name }} = "{{ project_slug }}._cli:main"
{% endif %}

[build-system]
requires = ["uv_build>=0.9.1,<0.10.0"]
build-backend = "uv_build"
